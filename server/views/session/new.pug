extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session') method='post')
    +input(signInForm, t('views.session.new.email'), errors)(type="text")
    +input(signInForm, t('views.session.new.password'), errors)(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))